{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX Documentation",
    "description": "This is an API for a car rent service",
    "version": "1.0.0",
    "contact": {
      "email": "gois.jg.dev@gmail.com"
    }
  },
  "host": "localhost:3333",
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "It will create a new category",
        "description": "Route that allow who call it to create a new car category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }                  
                },
                "example": {
                  "name": "Category Name Sample",
                  "description": "Category Description Sample"
                }
              }
            }
          }
        },
        "reponses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "application/json": {
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "It will list all categories",
        "description": "All created categories should be listed by calling this route",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": ["Category Import"],
        "summary":"It will create a new categorios based on CSV File",
        "description": "It will import a csv file, if category already exists it will ignore that line, and add all non-existing ones",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "CSV File"
                  }
                }
              }
            }
          }
        },
        "reponses": {
          "201": {
            "description": "Categories imported!"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/specifications": {
      "get": {
        "tags": ["Specifications"],
        "summary": "List all specs",
        "description": "List all registered specs",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Specifications"],
        "summary": "Create a new spec",
        "description": "By passing name and description of spec, it will create it",
        "requestBody": {
          "content": {
            "application/json": {
              "schema":{
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "reponses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
