{
  "openapi": "3.0.0",
  "info": {
    "title": "RentX Documentation",
    "description": "This is an API for a car rent service",
    "version": "1.0.0",
    "contact": {
      "email": "gois.jg.dev@gmail.com"
    }
  },
  "host": "localhost:3333",
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "It will create a new category",
        "description": "Route that allow who call it to create a new car category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema":  {
                "$ref": "#/definitions/Category"
              }
            }
          }
        },
        "reponses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "It will list all categories",
        "description": "All created categories should be listed by calling this route",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema":  {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Category"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": ["Category Import"],
        "summary":"It will create a new categorios based on CSV File",
        "description": "It will import a csv file, if category already exists it will ignore that line, and add all non-existing ones",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "CSV File",
                    "properties": {
                      "path": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "reponses": {
          "201": {
            "description": "Categories imported!"
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    },
    "/specifications": {
      "get": {
        "tags": ["Specifications"],
        "summary": "List all specs",
        "description": "List all registered specs",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Specification"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Specifications"],
        "summary": "Create a new spec",
        "description": "By passing name and description of spec, it will create it",
        "requestBody": {
          "content": {
            "application/json": {
              "schema":{
                "$ref": "#/definitions/Specification"
              }
            }
          }
        },
        "reponses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Category": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
        "type": "string"
        }
      },
      "example": {
        "name": "Spec Name Sample",
        "description": "Spec Description Sample"
      }
    },
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "example": {
        "name": "Spec Name Sample",
        "description": "Spec Description Sample"
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        }
      }
    }
  }
}
